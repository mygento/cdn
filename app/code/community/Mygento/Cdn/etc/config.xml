<?xml version="1.0" ?>
<config>
    <modules>
        <Mygento_Cdn>
            <version>1.6.4</version>
        </Mygento_Cdn>
    </modules>
    <default>
        <mycdn>
            <general>
                <enabled>0</enabled>
                <debug>0</debug>
                <async>0</async>
                <min>1000</min>
                <minify>1</minify>
            </general>
            <s3>
                <gzip>1</gzip>
            </s3>
        </mycdn>        
        <system>
            <media_storage_configuration>
                <ignored_resources>.svn,.htaccess,cache,tmp</ignored_resources>
            </media_storage_configuration>
        </system>
    </default>
    <global>
        <blocks>
            <mycdn>
                <class>Mygento_Cdn_Block</class>
            </mycdn>
        </blocks>
        <helpers>
            <mycdn>
                <class>Mygento_Cdn_Helper</class>
            </mycdn>
            <core>
                <rewrite>                   
                    <file_storage_database>Mygento_Cdn_Helper_Rewrite_Core_File_Storage_Database</file_storage_database>
                </rewrite>
            </core>
        </helpers>
        <models>
            <mycdn>
                <class>Mygento_Cdn_Model</class>
                <resourceModel>mycdn_resource</resourceModel>
            </mycdn>
            <mycdn_resource>
                <class>Mygento_Cdn_Model_Resource</class>
                <deprecatedNode>mycdn_mysql4</deprecatedNode>
                <entities>
                    <job>
                        <table>mygento_cdn_job</table>
                    </job>
                </entities>
            </mycdn_resource>            
            <adminhtml>
                <rewrite>
                    <system_config_source_storage_media_storage>Mygento_Cdn_Model_Rewrite_Config_Source_Media_Storage</system_config_source_storage_media_storage>
                </rewrite>
            </adminhtml>
            <core>
                <rewrite>
                    <file_storage>Mygento_Cdn_Model_Rewrite_Core_File_Storage</file_storage>
                    <file_storage_database>Mygento_Cdn_Model_Rewrite_Core_File_Storage_Database</file_storage_database>
                    <!-- <file_storage_directory_database>Thai_S3_Model_Core_File_Storage_Directory_Database</file_storage_directory_database>-->
                </rewrite>
            </core>
        </models>        
        <resources>
            <mycdn_setup>
                <setup>
                    <module>Mygento_Cdn</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mycdn_setup>
            <mycdn_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mycdn_write>
            <mycdn_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mycdn_read>
        </resources>
    </global>
    <admin>
        <routers>
            <mycdn>
                <use>admin</use>
                <args>
                    <module>Mygento_Cdn</module>
                    <frontName>mycdn</frontName>
                </args>
            </mycdn>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <mycdn>
                    <files>
                        <default>Mygento_Cdn.csv</default>
                    </files>
                </mycdn>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mycdn>
                                            <title>Mygento CDN Configuration</title>
                                        </mycdn>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <mycdn>
                    <files>
                        <default>Mygento_Cdn.csv</default>
                    </files>
                </mycdn>
            </modules>
        </translate>
    </frontend>    
    <phpunit>
        <suite>
            <modules>
                <Mygento_Cdn/>
            </modules>
        </suite>
    </phpunit>
</config>
